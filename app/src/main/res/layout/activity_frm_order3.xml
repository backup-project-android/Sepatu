<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <EditText
                    android:id="@+id/txt_nama_p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Nama Lengkap"/>

                <fragment
                    android:id="@+id/place_autocomplete_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                    />

                <EditText
                    android:id="@+id/txt_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Alamat lengkap" />

                <EditText
                    android:id="@+id/txt_nohp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="No. Handphone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Item" />

                <CheckBox
                    android:id="@+id/cb_sepatu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sepatu" />

                <EditText
                    android:id="@+id/txt_jum_1"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="90dp"
                    android:inputType="textPersonName"
                    android:maxLength="3"
                    android:text="0" />

                <CheckBox
                    android:id="@+id/cb_tas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tas" />

                <EditText
                    android:id="@+id/txt_jum_2"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="90dp"
                    android:inputType="textPersonName"
                    android:maxLength="3"
                    android:text="0" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="SEPATU" />

                <TextView
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:text="- Pantofel
- Sneakers
- Boots
- Heels
- Wedges" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="-103dp"
                    android:text="TAS" />

                <TextView
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="90dp"
                    android:text="- Bifold
- Travel Wallet
- Compact
- Travel Wallet" />

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Keterangan Order" />

                <EditText
                    android:id="@+id/txt_keterangan"
                    android:layout_width="354dp"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:hint="Keterangan Order"
                    android:lines="10"
                    android:maxLines="15"
                    android:minLines="5" />


                <!--<EditText
                    android:id="@+id/txt_jumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Jumlah Item" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="*) 3 Hari Pengerjaan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rp.95.000,00 (Sudah termasuk biaya antar-jemput Rp.10.000,00)" />

                <Spinner
                    android:id="@+id/sp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/pembayaran"
                    android:padding="20dp"></Spinner>


                <TextView
                    android:id="@+id/txt_long"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:background="#d67601"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_lat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="TextView" />


            </LinearLayout>
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>